<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kdehairy.freelance.umra"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="14" />

    <application
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/place_holder"
        android:label="@string/app_name"
        android:theme="@style/Theme.Umra" >
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Umra.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TOCActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SectionActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".InfoActivity"
            android:label="@string/menu_info" />
        <activity
            android:name=".PrayerActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Umra.Prayer" />
    </application>

</manifest>