<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Umra" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.Umra.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Umra.ActionBar</item>
        
        <item name="android:windowBackground">@color/window_bkgrnd</item>
        
